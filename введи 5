import java.util.Scanner;

public class Usedd {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int x;
        do {
            System.out.println("Введи пять");
            x = scanner.nextInt();
            if (x != 5) {
                System.out.println("Это не пять");
            }
            }
            while (x != 5); {
                System.out.println("Другое дело");
            }
        }
    }



